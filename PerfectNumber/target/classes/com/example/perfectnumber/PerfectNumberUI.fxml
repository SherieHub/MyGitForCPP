<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ProgressIndicator?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/17.0.2" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.perfectnumber.PerfectNumberController">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <Label text="Number (num):" />
   <TextField fx:id="numInput" />
   <Label text="Thread Count (cnt):" />
   <TextField fx:id="threadInput" />
   <Button text="Start Finding Perfect Numbers" onAction="#startFindingPerfectNumbers" />
   <TextArea fx:id="resultArea" prefHeight="200.0" prefWidth="200.0" />
   <HBox fx:id="progressBox" alignment="CENTER" spacing="5.0">
      <padding>
         <Insets top="10.0" />
      </padding>
   </HBox>
   <Button fx:id="backButton" text="Back" onAction="#resetUI" />
</VBox>